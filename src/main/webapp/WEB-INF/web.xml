<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Zoo</display-name>

    <servlet>
        <servlet-name>Animal</servlet-name>
        <jsp-file>/animal.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Animal</servlet-name>
        <url-pattern>/animal/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Feed</servlet-name>
        <servlet-class>se.iths.grupp2.animals.server.FeedPost</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Feed</servlet-name>
        <url-pattern>/feed</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Pet</servlet-name>
        <servlet-class>se.iths.grupp2.animals.server.PetPost</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Pet</servlet-name>
        <url-pattern>/pet</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>se.iths.grupp2.animals.server.InitializationServlet</listener-class>
    </listener>

    <servlet>
        <servlet-name>Add</servlet-name>
        <servlet-class>se.iths.grupp2.animals.server.AddPost</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Delete</servlet-name>
        <servlet-class>se.iths.grupp2.animals.server.DeletePost</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Save</servlet-name>
        <servlet-class>se.iths.grupp2.animals.server.SavePost</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Save</servlet-name>
        <url-pattern>/save</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Load</servlet-name>
        <servlet-class>se.iths.grupp2.animals.server.LoadPost</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Load</servlet-name>
        <url-pattern>/load</url-pattern>
    </servlet-mapping>

</web-app>